<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/tab_text_color</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="ChipTheme2" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/tab_text_color</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="ErrorButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/red</item>
        <item name="backgroundTint">@null</item>
    </style>


</resources>